{
    "name": "inpsyde/composer-assets-compiler",
    "description": "Composer plugin that install dependencies and compile assets based on configuration.",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Inpsyde GmbH",
            "role": "company"
        },
        {
            "name": "Giuseppe Mazzapica",
            "email": "g.mazzapica@inpsyde.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">= 7.2",
        "composer-plugin-api": "^1.1",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Inpsyde\\AssetsCompiler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Inpsyde\\AssetsCompiler\\Tests\\": "tests/src/",
            "Inpsyde\\AssetsCompiler\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "mockery/mockery": "^1",
        "squizlabs/php_codesniffer": "3.2.*",
        "inpsyde/php-coding-standards": "0.*",
        "vimeo/psalm": "^3",
        "composer/composer": "^1.0",
        "mikey179/vfsstream": "^1.6"
    },
    "scripts": {
        "qa": [
            "sh ./vendor/bin/phpcs",
            "sh ./vendor/bin/psalm",
            "sh ./vendor/bin/phpunit"
        ]
    },
    "extra": {
        "class": "Inpsyde\\AssetsCompiler\\ComposerPlugin"
    }
}
